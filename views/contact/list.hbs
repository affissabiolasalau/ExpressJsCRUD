<br />
<h4> <a href="/add" class="btn btn-secondary">Create New</a> </h4>
<table class="table table-striped">
    <thead>
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Phone</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.phone}}</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/edit/{{this.id}}">Edit</a>
                <a class="btn btn-sm btn-info" href="/view/{{this.id}}">View</a>
                <a class="btn btn-sm btn-danger" href="/delete/{{this.id}}" onclick="return confirm('Are you sure you want to delete this contact?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>